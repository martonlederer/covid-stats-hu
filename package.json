{
  "name": "covid-stats-hu",
  "version": "0.0.1",
  "repository": "https://github.com/martonlederer/covid-stats-hu.git",
  "author": "Marton Lederer <marton@lederer.hu>",
  "license": "MIT",
  "scripts": {
    "build": "routify -b && rollup -c",
    "dev": "routify -c serve",
    "serve": "rollup -c -w",
    "start": "sirv public --single",
    "validate": "svelte-check",
    "fmt:pre": "cd ./node_modules/prettier-plugin-svelte/ && yarn && yarn build",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "build:api": "cd api && tsc",
    "build:jobs": "cd jobs && tsc",
    "sync": "cd jobs && tsc && cd .. && node jobs/dist/jobs/sync-data.js"
  },
  "gitHooks": {
    "pre-commit": "prettier --write . && git add -A"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@sveltech/routify": "^1.9.9",
    "@tsconfig/svelte": "^1.0.0",
    "@types/node": "^14.11.8",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@vercel/build-utils": "^2.5.4",
    "@vercel/node": "^1.8.4",
    "apollo-server-micro": "^2.18.2",
    "axios": "^0.21.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.4.0",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.31",
    "node-html-parser": "^1.4.2",
    "reflect-metadata": "^0.1.13",
    "sass": "^1.27.0",
    "sirv-cli": "^1.0.8",
    "svelte-chartjs": "^1.0.1",
    "type-graphql": "^1.1.0"
  }
}
